blueprint:
  name: ZHC5010 Button Light Control
  description: Control different lights with each button on the ZHC5010 using Z-Wave JS.
  domain: automation
  input:
    zhc5010_device:
      name: ZHC5010 Device
      description: Select the ZHC5010 device to use.
      selector:
        device:
          integration: zwave_js
          manufacturer: Logic Group
          model: ZHC5010
    button_1_light:
      name: Button 1 Light
      description: Select the light to control with Button 1 (optional).
      selector:
        entity:
          domain: light
          multiple: false
          optional: true  # Make it optional
    button_2_light:
      name: Button 2 Light
      description: Select the light to control with Button 2 (optional).
      selector:
        entity:
          domain: light
          multiple: false
          optional: true  # Make it optional
    button_3_light:
      name: Button 3 Light
      description: Select the light to control with Button 3 (optional).
      selector:
        entity:
          domain: light
          multiple: false
          optional: true  # Make it optional
    button_4_light:
      name: Button 4 Light
      description: Select the light to control with Button 4 (optional).
      selector:
        entity:
          domain: light
          multiple: false
          optional: true  # Make it optional
    hold_brightness:
      name: Hold Brightness
      description: Brightness level to set when the button is held.
      default: 50
      selector:
        number:
          min: 1
          max: 100
          unit_of_measurement: "%"
          mode: slider
    transition_time:
      name: Transition Time
      description: Set the transition speed (in seconds) for light changes.
      default: 1.0
      selector:
        number:
          min: 0
          max: 10
          unit_of_measurement: "s"
          mode: slider
          step: 0.1

mode: single
max_exceeded: silent
trigger:
  - platform: event
    event_type: zwave_js_value_notification
    event_data:
      device_id: !input zhc5010_device

variables:
  button_id: '{{ trigger.event.data.property_key_name }}'
  but
