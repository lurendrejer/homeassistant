blueprint:
  name: ZHC5010 Button Light Control
  description: Control a light with selected buttons on the ZHC5010 using Z-Wave JS.
  domain: automation
  input:
    zhc5010_devices:
      name: ZHC5010 Devices
      description: Select one or more ZHC5010 devices to use.
      selector:
        device:
          integration: zwave_js
          manufacturer: Logic Group
          model: ZHC5010
          multiple: true  # Allows multiple device selection
    target_light:
      name: Target Light
      description: Select the light to control.
      selector:
        entity:
          domain: light
    buttons:
      name: ZHC5010 Buttons
      description: Select one or more buttons on the ZHC5010 to use.
      selector:
        select:
          multiple: true  # Allows multiple button selection
          options:
            - Button 1
            - Button 2
            - Button 3
            - Button 4
    hold_brightness:
      name: Hold Brightness
      description: Brightness level to set when the button is held.
      default: 50
      selector:
        number:
          min: 1
          max: 100
          unit_of_measurement: "%"
          mode: slider
    transition_time:
      name: Transition Time
      description: Set the transition speed (in seconds) for light changes.
      default: 1.0
      selector:
        number:
          min: 0
          max: 10
          unit_of_measurement: "s"
          mode: slider
          step: 0.1

mode: single
max_exceeded: silent
trigger:
  - platform: event
    event_type: zwave_js_value_notification
    event_data:
      device_id: 
        # Match any of the selected ZHC5010 devices
        in: !input zhc5010_devices | map(attribute='id') | list

variables:
  button_id: '{{ trigger.event.data.property_key_name }}'
  button_action: '{{ trigger.event.data.value }}'
  selected_buttons: !input buttons  # A list of selected buttons
  hold_brightness: !input hold_brightness
  transition_time: !input transition_time

condition:
  # Ensure the event matches one of the selected buttons
  - condition: template
    value_template: >
      {{ button_id in
         {
           '001': 'Button 1',
           '002': 'Button 2',
           '003': 'Button 3',
           '004': 'Button 4'
         } | selectattr('value', 'in', selected_buttons) | map(attribute='key') | list
      }}

action:
  - choose:
      # Handle the button press action (multiple buttons possible)
      - conditions:
          - condition: template
            value_template: "{{ button_action == 'KeyPressed' }}"
        sequence:
          - choose:
              - conditions:
                  - condition: state
                    entity_id: !input target_light
                    state: "on"
                sequence:
                  - service: light.turn_off
                    data:
                      entity_id: !input target_light
                      transition: "{{ transition_time }}"
              - conditions:
                  - condition: state
                    entity_id: !input target_light
                    state: "off"
                sequence:
                  - service: light.turn_on
                    data:
                      entity_id: !input target_light
                      brightness_pct: 100
                      transition: "{{ transition_time }}"

      # Handle the button hold action (multiple buttons possible)
      - conditions:
          - condition: template
            value_template: "{{ button_action == 'KeyHeldDown' }}"
        sequence:
          - service: light.turn_on
            data:
              entity_id: !input target_light
              brightness_pct: !input hold_brightness
              transition: "{{ transition_time }}"
